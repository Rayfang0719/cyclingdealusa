<div class="featured-collections">
    <div class="featured-collections__wrapper">
        <div class="pure-g section-body">
            {%- for block in section.blocks -%}
            <div class="pure-u-1-2 pure-u-md-1-3">
                <a href="{{ block.settings.collection_url }}">
                    <img src="{{ block.settings.collection_image | img_url:"master" }}" alt="workstand" style="width:100%;height:auto;">
                </a>
            </div>
            {%- endfor -%}

        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Featured Collections",

        "settings": [
            {
                "type": "header",
                "content": "Featured Collections"
            },
            {
                "type": "text",
                "id": "section_title",
                "label": "Section Title",
                "default": "Featured Collections"
            }
        ],
        "blocks": [
            {
                "type": "featured_collection",
                "name": "Featured Collection",
                "settings":[
                    {
                    "type": "url",
                    "id": "collection_url",
                    "label": "Choose a Collection"
                    },
                    {
                        "type": "image_picker",
                        "id": "collection_image",
                        "label": "Pick a Image"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Featured Collections",
                "category": "Collection"
            }
        ]
    }
{% endschema %}