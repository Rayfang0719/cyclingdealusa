{% paginate collection.products by 16 %}
<div class="collection-template__wrapper">
    <h1>{{ collection.title }}</h1>
    <div>
        {{ collection.description }}
    </div>
    <div class="pure-g" style="padding:20px 0;margin-top:20px;border-top: 1px solid #eeeeee;border-bottom: 1px solid #eeeeee;margin-bottom: 20px;">
        <div class="pure-u-1-3">
            {{ paginate.items }} Results
        </div>
        <div class="pure-u-1-3">
            <div class="pagination" style="margin-top:8px;">
                {% if paginate.pages > 1 %}
                    {{ paginate | default_pagination }}
                {% endif %}
            </div>
        </div>
        <div class="pure-u-1-3">

            <div class="selector-wrapper js-collection-sort" style="float: right;" data-default-sort="{{ collection.sort_by | default: collection.default_sort_by }}" >
                <label for="SortBy">Sort </label>
                <select name="SortBy" id="SortBy" style="">
                    <option value="manual">Featured</option>
                    <option value="best-selling">Best Selling</option>
                    <option value="title-ascending">Alphabetically, A-Z</option>
                    <option value="title-descending">Alphabetically, Z-A</option>
                    <option value="price-ascending">Price, low to high</option>
                    <option value="price-descending">Price, high to low</option>
                    <option value="created-descending">Date, new to old</option>
                    <option value="created-ascending">Date, old to new</option>
                </select>
            </div>

        </div>
    </div>

    <div class="pure-g">
    {% for product in collection.products %}
        {% include 'product-item' %}
    {% else %}
        <p>no matches</p>
    {% endfor %}

    </div>

    <div class="pagination">
    {% if paginate.pages > 1 %}
        {{ paginate | default_pagination }}
    {% endif %}
    </div>
</div>
{% endpaginate %}