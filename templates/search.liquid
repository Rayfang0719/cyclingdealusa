<div class="pure-g" style="padding:16px;">
  <div class="pure-u-1 pure-u-md-1-4 collection_sidebar">
    {% section 'collection-sidebar' %}
  </div>
  <div class="pure-u-1 pure-u-md-3-4 collection_template" style="padding-left:32px;padding-right:32px;">
    {% paginate search.results by 16 %}
      <div class="collection-template__wrapper">
        <div>
          <form action="/search" method="get" role="search">
            <input type="search" name="q" value="{{ search.terms | escape }}">
            <button type="submit">search</button>
          </form>
        </div>
        <div class="pure-g" style="padding:20px 0;margin-top:20px;border-top: 1px solid #eeeeee;border-bottom: 1px solid #eeeeee;margin-bottom: 20px;">
          <div class="pure-u-1-3">
            {{ paginate.items }} Results
          </div>
          <div class="pure-u-2-3">
            <div class="pagination" style="margin-top:8px;">
              {% if paginate.pages > 1 %}
                {{ paginate | default_pagination }}
              {% endif %}
            </div>
          </div>

        </div>

        <div class="pure-g">
          {% if search.performed %}
          {% for product in search.results %}
            {% include 'product-item' %}
            {% endfor %}
          {% else %}
            <p>no matches</p>
          {% endif %}

        </div>

        <div class="pagination">
          {% if paginate.pages > 1 %}
            {{ paginate | default_pagination }}
          {% endif %}
        </div>
      </div>
    {% endpaginate %}
  </div>
</div>
