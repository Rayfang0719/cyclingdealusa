<section class="section section--account account account--reset">
    <div class="container container--tiny">

        <div class="section__title section__title--center section__title--desc">
            <h1 class="section__title-text h2">Reset account password</h1>
            <p class="section__title-desc">{{ 'Enter a new password for {{ email }}' |  email: email }}</p>
        </div>

        <div class="account__form">
            {% form 'reset_customer_password' %}

                {{ form.errors | default_errors }}

                <label for="ResetPassword">Password</label>
                <input type="password" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">

                <label for="PasswordConfirmation">"Confirm Password</label>
                <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{% if form.errors contains 'password_confirmation' %} input--error{% endif %}">

                <div class="account__form-buttons">
                    <input type="submit" class="c-btn c-btn--primary account__form-submit" value="Reset Password">
                </div>
            {% endform %}
        </div>

    </div>
</section>